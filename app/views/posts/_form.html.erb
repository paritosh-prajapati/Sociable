
<div class="container">
  <div class="row justify-content-center">

    <%= form_with model: @post do |form| %>  
      <div>    
        <%= form.label :body %><br>    
        <%= form.text_area :body, :rows => "4", :cols => "30" %>  
      </div>    

      <div>
        <%= form.file_field :post_file,accept: 'image/png, image/gif, image/jpeg, image/jpg' %>
      </div>

      <div>    
      <%= form.submit %>  
      </div>
    <% end %>
    
  </div>
</div>